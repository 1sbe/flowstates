{
  "name": "appfludio",
  "version": "1.0.0",
  "scripts": {
    "build": "ng build --configuration=production --base-href=https://showcase.seb777.com/",
    "ng": "ng",
    "start": "npm run build && npm run serve",
    "serve": "node server.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev": "ng serve --port 4200 --host showcase.seb777.com",
    "install-deps": "npm install express compression helmet"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.2",
    "@angular/compiler": "^21.0.2",
    "@angular/core": "^21.0.2",
    "@angular/forms": "^21.0.2",
    "@angular/platform-browser": "^21.0.2",
    "@angular/router": "^21.0.2",
    "compression": "^1.8.1",
    "express": "^5.2.1",
    "helmet": "^7.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.2",
    "@types/jasmine": "~5.1.0",
    "@types/webgl2": "^0.0.12",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "^5.9.3"
  }
}
